<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:ns1="http://schemas.android.com/apk/res-auto">
    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="enforceTextAppearance">false</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.Button</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button</item>
        <item name="android:stateListAnimator" tools:ignore="PrivateResource">@animator/m3_btn_state_list_anim</item>
        <item name="iconSize">18dp</item>
    </style>

    <style name="MyTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@drawable/rounded_btn_calculator</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>